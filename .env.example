# 環境設定テンプレート
# 本番環境では適切な値に変更してください

# 環境種別
NODE_ENV=development

# データベース設定
POSTGRES_DB=organization_survey
POSTGRES_USER=survey_user
POSTGRES_PASSWORD=survey_password
DATABASE_URL=postgresql://survey_user:survey_password@postgres:5432/organization_survey

# バックエンドAPI設定
PORT=3001
API_SECRET_KEY=your-secret-key-here

# フロントエンド設定
VITE_API_URL=http://localhost:3001

# SSL設定（本番環境用）
SSL_CERT_PATH=/opt/ssl/cert.pem
SSL_KEY_PATH=/opt/ssl/key.pem

# Microsoft365 SSO設定（将来実装用）
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_REDIRECT_URI=http://localhost:5173/auth/callback

# ログ設定
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# セッション設定
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100